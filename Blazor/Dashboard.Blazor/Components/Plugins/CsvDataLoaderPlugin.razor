@using Dashboard.Blazor.Models
@inherits Dashboard.Blazor.Components.Plugins.BasePluginComponent

<div style="padding: 20px;">
    <h2>CSV Data Loader</h2>
    <p>Plugin ID: @PluginId</p>
    
    <div style="margin-top: 20px;">
        <h3>Configuration</h3>
        <div style="background: #f5f5f5; padding: 10px; border-radius: 4px;">
            <p><strong>Connection String:</strong> @ConnectionString</p>
            <p><strong>Validation API:</strong> @ValidationApi</p>
            <p><strong>Auth Type:</strong> @AuthType</p>
        </div>
    </div>

    <div style="margin-top: 20px;">
        <h3>Functionality</h3>
        <div style="background: #e8f5e8; padding: 15px; border-radius: 4px;">
            <p>✅ Read CSV files from the configured path</p>
            <p>✅ Validate data format using the API endpoint</p>
            <p>✅ Process and transform CSV data</p>
            <p>✅ Handle authentication via API key</p>
        </div>
    </div>

    <button @onclick="LoadCsvData"
            style="margin-top: 20px; padding: 10px 20px; background-color: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">
        Load CSV Data
    </button>
</div>

@code {
    private string ConnectionString => Config.ConnectionStrings?.GetValueOrDefault("default") ?? "No connection string configured";
    private string ValidationApi => Config.ApiBaseUrls?.GetValueOrDefault("validation") ?? "No validation API configured";
    private string AuthType => Config.AuthSettings?.Type ?? "none";

    private async Task LoadCsvData()
    {
        await Task.Delay(100); // Simulate async operation
        // In a real implementation, this would load CSV data
        Console.WriteLine("Loading CSV data...");
    }
}