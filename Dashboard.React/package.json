{
  "name": "glitter-roller",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run lint && react-scripts build",
    "test": "react-scripts test --ci --watchAll=false",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:blazor": "npx playwright test --config=playwright.blazor.config.ts --reporter=list",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .tsx,.ts,.js,.jsx --max-warnings 0 && tsc --noEmit",
    "blazor:build": "cd ../Blazor/Dashboard.Blazor && dotnet build",
    "blazor:run": "cd ../Blazor/Dashboard.Blazor && dotnet run",
    "blazor:test": "npm run blazor:build && npm run test:e2e:blazor"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0"
  }
}